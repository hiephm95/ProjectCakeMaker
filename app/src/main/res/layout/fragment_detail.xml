<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:background="#f3dff7"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/layoutInfo"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        card_view:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Name: "
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetailName"
                android:layout_marginTop="5dp"
                android:text="Price: "
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvDetailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetailName"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvEggLess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetailPrice"
                android:layout_marginTop="5dp"
                android:text="Egg less:"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.rey.material.widget.RadioButton
                android:id="@+id/cbEggLess"
                style="@style/Material.Drawable.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetailPrice"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="1dp"
                android:button="@color/pink"
                app:rbd_strokeColor="@color/pink" />

            <TextView
                android:id="@+id/tvEggWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEggLess"
                android:layout_marginTop="5dp"
                android:text="Egg with:"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.rey.material.widget.RadioButton
                android:id="@+id/cbEggWith"
                style="@style/Material.Drawable.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEggLess"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="1dp"
                app:rbd_strokeColor="@color/pink" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/layoutDesciption"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/layoutInfo"
        android:layout_marginTop="20dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_marginTop="8dp"
                android:textSize="18dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutDesciption"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/pink"
            android:text="Place The Order"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_border"
            android:text="Add to Cart"
            android:textAllCaps="false"
            android:textColor="@color/gray" />


    </LinearLayout>


</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/layoutInfo"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/custom_border">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Name: "
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetailName"
                android:layout_marginTop="5dp"
                android:text="Price: "
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvDetailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetailName"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="120dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvEggLess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetailPrice"
                android:layout_marginTop="5dp"
                android:text="Egg less:"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.rey.material.widget.CheckBox
                android:id="@+id/cbEggLess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetailPrice"
                android:button="@color/pink"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="1dp"
                style="@style/Material.Drawable.CheckBox"
                app:cbd_strokeColor="@color/pink"/>

            <TextView
                android:id="@+id/tvEggWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEggLess"
                android:layout_marginTop="5dp"
                android:text="Egg with:"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.rey.material.widget.CheckBox
                android:id="@+id/cbEggWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEggLess"
                android:layout_marginLeft="115dp"
                style="@style/Material.Drawable.CheckBox"
                android:layout_marginTop="1dp"
                app:cbd_strokeColor="@color/pink"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDesciption"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/layoutInfo"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_border">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_marginTop="8dp"
                android:textSize="18dp" />

        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutDesciption"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/pink"
            android:text="Place The Order"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_border"
            android:text="Add to favourite"
            android:textAllCaps="false"
            android:textColor="@color/gray" />


    </LinearLayout>


</RelativeLayout>